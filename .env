# === Essential Environment Variables for Chatwoot Production ===

# Security
SECRET_KEY_BASE=your_secure_generated_key # Use `rake secret` to generate

# App URLs
FRONTEND_URL=FRONTEND_URL=http://localhost:3000

# Rails Environment
RAILS_ENV=production
RAILS_MAX_THREADS=5
FORCE_SSL=false

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_if_any

# PostgreSQL
POSTGRES_HOST=your_postgres_host
POSTGRES_USERNAME=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
# POSTGRES_DATABASE=chatwoot_production

# Email Outgoing
MAILER_SENDER_EMAIL=Chatwoot <no-reply@yourdomain.com>
SMTP_DOMAIN=yourdomain.com
SMTP_ADDRESS=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=peer

# Active Storage
ACTIVE_STORAGE_SERVICE=local

# Logging
RAILS_LOG_TO_STDOUT=true
LOG_LEVEL=info

# Account Signup Control
ENABLE_ACCOUNT_SIGNUP=false

# Push Notifications
ENABLE_PUSH_RELAY_SERVER=true

# Stripe (optional for billing features)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
