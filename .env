########################################
# CHATWOOT - Configurações do ambiente
########################################

# Chave secreta do Rails
SECRET_KEY_BASE=use_uma_chave_gerada_com_rake_secret

# URLs da aplicação
FRONTEND_URL=http://localhost:3000

# Ambiente do Rails
RAILS_ENV=production
RAILS_MAX_THREADS=5
FORCE_SSL=false

# Redis (nome do serviço no docker-compose)
REDIS_URL=redis://chatwoot_redis:6379
REDIS_PASSWORD=

# PostgreSQL (nome do serviço no docker-compose)
POSTGRES_HOST=chatwoot_postgres
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=chatwoot

# E-mail (preencha conforme seu provedor)
MAILER_SENDER_EMAIL=Chatwoot <no-reply@seudominio.com>
SMTP_DOMAIN=seudominio.com
SMTP_ADDRESS=smtp.seuprovedor.com
SMTP_PORT=587
SMTP_USERNAME=seu_usuario_smtp
SMTP_PASSWORD=sua_senha_smtp
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=peer

# Armazenamento de arquivos
ACTIVE_STORAGE_SERVICE=local

# Logging
RAILS_LOG_TO_STDOUT=true
LOG_LEVEL=info

# Controle de criação de contas
ENABLE_ACCOUNT_SIGNUP=false

# Notificações push
ENABLE_PUSH_RELAY_SERVER=true

# Stripe (opcional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
